var userId = '<%= @user.id %>';
<% if @user.errors.present? %>

<% @user.errors.full_messages.each do |message| %>
$('#user_' + userId + '_errors').html('<%= j message %>');
<% end %>

<% else %>
$('.test_modal').html("<%= j render 'crop_avatar', user: @user %>");
crop_avatar();
$('.avatar_preview').html("<%= j  image_tag @user.avatar_url, id: 'avatar_preview'%>");
$('#fileupload').toggle();
$('.popup-modal-dismiss').toggle();
$('.upload_avatar_button').toggle();
<% end %>
