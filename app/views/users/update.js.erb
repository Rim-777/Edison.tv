<% if @user.errors.present? %>

$('.notifications').html('<%= j render 'common/errors', resource: @user %>');

<% else %>
$('.load_avater_modal').html("<%= j render 'crop_avatar', user: @user %>");
crop_avatar();
$('.avatar_preview').html("<%= j  image_tag @user.avatar_url(:large), id: 'avatar_preview'%>");
$('#fileupload').toggle();
$('.popup-modal-dismiss').toggle();
$('.upload_avatar_button').toggle();
<% end %>
