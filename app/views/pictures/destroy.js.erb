var pictureId = '<%= @picture.id %>';
var picture = $('#pucture_box_'+ pictureId);

<% if @picture.errors.present? %>
    $('.notifications').html('<%= j render 'common/errors', resource: @picture %>');
<% else %>
    picture.hide();
    picture.remove();

    <% if @picture.album.is_empty? %>
        $('#album_' + '<%= @picture.album_id %>').html('<%= j render 'albums/empty_album', album:@picture.album  %>');
        setFileUploader();
        <% end %>
<% end %>
